<h1>New Wiki</h1>

<div class="row">
  <div class="col-md-6">
    <%= form_for @wiki do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control', placeholder: 'Enter wiki title' %>
      </div>
      <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body, rows: 20, class: 'form-control', id: 'sourceTA', onkeyup: 'run()', placeholder: 'Enter wiki body' %>
      </div>
      <% if current_user.premium? || current_user.admin? %>
        <div class="form-group">
          <%= f.label :private, class: 'checkbox' do %>
            <%= f.check_box :private %> Private wiki
          <% end %>
        </div>
      <% end %>
      <div class="form-group">
        <%= f.submit "Save", class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
  <div class="col-md-6" id="targetDiv"></div>
</div>
