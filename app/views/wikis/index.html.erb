<h1 class="text-center">My Wikis</h1>
</br>
<div class="wiki-table">
  <table class="table table-striped">
    <% @wikis.each do |wiki| %>
      <% if policy(wiki).show? %>
        <tr>
          <td><%= link_to wiki.title, wiki %></td>
          <td>
            <% if policy(wiki).edit? %>
              <%= link_to "edit", edit_wiki_path(wiki) %>
            <% end %>
          </td>
          <td>
            <% if policy(wiki).destroy? %>
              <%= link_to "delete", wiki, method: :delete, data: {confirm: 'Are you sure you want to delete this wiki?'} %>
            <% end %>
          </td>
          </tr>
        <% end %>
    <% end %>
  </table>
</div>
</br>
<div class="text-center">
  <% if policy(@wikis).new? %>
    <%= link_to "New Wiki", new_wiki_path, class: 'btn btn-success' %>
  <% end %>
</div>
