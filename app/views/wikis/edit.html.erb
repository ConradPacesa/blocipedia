<h1>Edit Wiki</h1>
<% if @wiki.user == current_user || current_user.admin? %>
  <%= link_to "Add collaborators", wiki_collaborators_path(@wiki), class: 'btn btn-success' %>
<% end %>
<div class="row">
  <div class="col-md-6">
    <%= form_for @wiki do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control', placeholder: 'Enter wiki title' %>
      </div>
      <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body, rows: 20, class: 'form-control', placeholder: 'Enter wiki body' %>
      </div>
      <% if current_user.premium? || current_user.admin? %>
        <div class="form-group">
          <%= f.label :private, class: 'checkbox' do %>
            <%= f.check_box :private %> Private wiki
          <% end %>
        </div>
      <% end %>
      <div class="form-group">
        <%= f.submit "Save", class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
  <div class="col-md-6">
    <%= render partial: 'wikis/wiki', locals: { wiki: @wiki } %>
  </div>
</div>
